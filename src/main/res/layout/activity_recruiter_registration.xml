<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".RecruiterRegistrationActivity">

    <TextView
        android:id="@+id/textViewRecruiterRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recruiter Registration"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewRecruiterRegistration"
        android:hint="Name"
        android:textSize="16sp"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editTextOfficialEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextName"
        android:hint="Official Email ID"
        android:textSize="16sp"
        android:inputType="textEmailAddress"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextOfficialEmail"
        android:hint="Password"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editTextCompanyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextPassword"
        android:hint="Company Name"
        android:textSize="16sp"
        android:inputType="text"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editTextCompanyWebsite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextCompanyName"
        android:hint="Company Website"
        android:textSize="16sp"
        android:inputType="textUri"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editTextGSTCertificate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextCompanyWebsite"
        android:hint="Company GST Certificate"
        android:textSize="16sp"
        android:inputType="text"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editTextCompanySize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextGSTCertificate"
        android:hint="Company Size"
        android:textSize="16sp"
        android:inputType="number"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editTextCompanyLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextCompanySize"
        android:hint="Company Location"
        android:textSize="16sp"
        android:inputType="text"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editTextCompanyAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextCompanyLocation"
        android:hint="Company Address"
        android:textSize="16sp"
        android:inputType="text"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/btnAttachPDF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attach PDF"
        android:background="@color/design_default_color_error"
        android:textColor="@android:color/white"
        android:layout_below="@id/editTextCompanyAddress"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textViewAttachedFileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnAttachPDF"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:text="Attached File: No file selected"
        android:textSize="12sp" />

    <RadioButton
        android:id="@+id/radioButtonPDF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PDF File Attached"
        android:layout_below="@id/editTextCompanyAddress"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnSignUpRecruiter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up as Recruiter"
        android:layout_below="@id/radioButtonPDF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/orSeparator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:layout_below="@id/btnSignUpRecruiter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnLoginRecruiter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_below="@id/orSeparator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
